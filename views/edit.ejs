<!doctype html>
<html lang="ar">
  <head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- boostrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" integrity="sha384-dpuaG1suU0eT09tx5plTaGMLBsfDLzUCCUXOY2j/LSvXYuG6Bqs43ALlhIqAJVRb" crossorigin="anonymous">

    <!-- boxicons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <title>Editar</title>
    </head>
    <body>
   
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Editar Usuarios</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        
      </nav>

      <!-- Formulario -->
       
      <% if (user){%>

      <div class="container mt-4"></div> 
        <div class="card border-secondary">
          <div class="card-header"> </div>
          <div class="card-body">
            <form action="/update" method="POST">
              <!--new -->
              <input id="id" name="id" value="<%=user.id%>" hidden>

            <div class="mb-3">
              <label for="user" class="form-label">*Nombre</label>
              <input type="text" class="form-control" id="user" name="user" value="<%=user.user%>" tabindex="1">
            </div>

            <div class="mb-3">
              <label for="user" class="form-label">*DNI</label>
              <input type="text" class="form-control" id="user" name="monthly_salary" value="<%=user.monthly_salary%>" tabindex="1">
            </div>


            <div class="mb-3">
              <label for="user" class="form-label">*Email</label>
              <input type="text" class="form-control" id="user" name="email" value="<%=user.email%>" tabindex="1">
            </div>

            <div class="mb-3">
              <label for="user" class="form-label">*Genero</label>
              <select id="rol" name="gender" class="form-select" aria-label="Default seleect example">
                
                <option <%=user.gender=='masculino' ? "selected": '' %> value="masculino"> masculino</option>
                <option <%=user.gender=='femenino' ? "selected": '' %> value="femenino"> femenino</option>

              </select>
              </div>  

         <div class="mb-3">
            <label for="user" class="form-label">Rol</label>
            <select id="rol" name="rol" class="form-select" aria-label="Default seleect example">

            <option <%=user.rol=='admin' ? "selected": '' %>  value="admin" selected>Admin</option>
            <option <%=user.rol=='data entry' ? "selected": '' %> value="data entry"> Data Entry </option>
          
          </select>

            </div>   
            <button type="submit" class="btn btn-primary" tabindex="5">OK</button>
            <a href="/" class="btn btn-secondary">Cancelar</a>
          </form>

        </div>

        </div>

      </div>

      <% } %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    
    </body>
</html>

